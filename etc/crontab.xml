<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="indicator_top_attribute_refresh" instance="Creativestyle\ProductPositiveIndicatorsExtension\Cron\TopAttributeRefresh" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="indicator_popular_products" instance="Creativestyle\ProductPositiveIndicatorsExtension\Cron\PopularIcon" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="indicator_recently_bought_products" instance="Creativestyle\ProductPositiveIndicatorsExtension\Cron\RecentlyBought" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
    </group>
</config>
